{
  "name": "pastebin",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync && bun run generate-parser:v1.1 && bun run generate-parser:v2.0",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "generate-parser:v1.1": "lezer-generator --typeScript --output src/lib/parsing/ahk-v1.1.gen.ts src/lib/parsing/ahk-v1.1.grammar",
    "generate-parser:v2.0": "lezer-generator --typeScript --output src/lib/parsing/ahk-v2.0.gen.ts src/lib/parsing/ahk-v2.0.grammar"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@lezer/generator": "^1.8.0",
    "@sveltejs/adapter-node": "^5.5.2",
    "@sveltejs/kit": "^2.50.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/bun": "^1.3.7",
    "@types/node": "^24",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.1.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.48.2",
    "svelte-check": "^4.3.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vite-plugin-devtools-json": "^1.0.0"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/search": "^6.6.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.11",
    "@lezer/highlight": "^1.2.3",
    "@lucide/svelte": "^0.563.1",
    "codemirror": "^6.0.2",
    "date-fns": "^4.1.0",
    "zod": "^4.3.6"
  }
}
